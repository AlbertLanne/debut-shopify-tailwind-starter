  position: fixed;
  -webkit-overflow-scrolling: touch;
  z-index: $z-index-drawer;

  .js-drawer-open-top & {
    display: block;
  }
}

.drawer--top {
  width: 100%;
  @include transform(translateY(-100%));

  .js-drawer-open-top & {
    @include transform(translateY(0%));
    display: flex;
    max-height: 100vh;
  }
}

.drawer-page-content {
